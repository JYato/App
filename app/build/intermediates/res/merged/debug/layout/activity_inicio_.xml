<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coralbackground"
    tools:context="com.example.jason.aplicacion_grupal.Inicio_Activity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/iniciar_sesion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:text="@string/Iniciar_sesion"
            tools:background="#F08080" />

        <TextView
            android:id="@+id/tiene_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iniciar_sesion"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/Tiene_una_cuenta" />

        <Button
            android:id="@+id/registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tiene_cuenta"
            android:layout_marginTop="10dp"
            android:text="@string/Registrar"
            android:background="#F08080"
            tools:background="#F08080" />

        <TextView
            android:id="@+id/aun_no_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/registrar"
            android:text="@string/Aun_no_tiene_cuenta" />

        <Button
            android:id="@+id/Ing_libre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/aun_no_cuenta"
            android:layout_marginTop="15dp"
            android:text="@string/Ingreso_libre"
            android:background="#F08080"
            tools:background="#F08080" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
